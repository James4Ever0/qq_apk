<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/e2" />
            <solid android:color="@color/pm" />
            <stroke android:width="@dimen/e3" android:color="@color/pm" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/e2" />
            <solid android:color="@color/pk" />
            <stroke android:width="@dimen/e3" android:color="@color/pk" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/e2" />
            <solid android:color="@color/pl" />
            <stroke android:width="@dimen/e3" android:color="@color/pl" />
        </shape>
    </item>
</selector>